{{!                                                                                                                                 
    @template core/pix_icon                                                                                                         
                                                                                                                                    
    Moodle pix_icon template.                                                                                                       
                                                                                                                                    
    The purpose of this template is to render a pix_icon.                                                                           
                                                                                                                                    
    Classes required for JS:                                                                                                        
    * none                                                                                                                          
                                                                                                                                    
    Data attributes required for JS:                                                                                                
    * none                                                                                                                          
                                                                                                                                    
    Context variables required for this template:                                                                                   
    * attributes Array of name / value pairs.                                                                                       
                                                                                                                                    
    Example context (json):                                                                                                         
    {                                                                                                                               
        "attributes": [                                                                                                             
            { "name": "src", "value": "http://moodle.com/wp-content/themes/moodle/images/logo-hat2.png" },                          
            { "name": "class", "value": "iconsmall" }                                                                               
        ]                                                                                                                           
    }                                                                                                                               
                                                                                                                                    
}}                                                  
{{! Página principal de la aplicación }}
<div data-role="page" id="mappage"  data-quicklinks="true" data-theme="b">


    {{!Panel principal de información}}

    <div data-role="panel" data-position="left" data-position-fixed="true" data-display="overlay" id="infopanel">

        <div id="estadoLogin">
            {{{user.picture}}} {{user.name}}
        </div>
        <h3>{{scavengerhunt.name}}</h3>
        <div id="welcomingInfo">
            <p>{{{scavengerhunt.description}}}</p>
            <a href="#" class="ui-btn  ui-btn-icon-left ui-icon-delete" onclick="return false;">{{#str}} exit, mod_scavengerhunt{{/str}}</a>
        </div>
    </div>

    {{!Panel de información de la pista seleccionada}}

    <div data-role="panel"  data-position="left" data-display="overlay" id="infoRiddlePanel">	
        <div id="infoRiddle">
            <h3>{{#str}} discovered_riddle, mod_scavengerhunt{{/str}}</h3>
            <div class="ui-corner-all custom-corners">
                <div class="ui-bar ui-bar-a">
                    <h3>{{#str}} nameRiddle, mod_scavengerhunt{{/str}}</h3>
                </div>
                <div class="ui-body ui-body-a">
                    <b><p id="nameRiddle">{{riddle.name}}</p></b>
                </div>
            </div>
            <div class="ui-corner-all custom-corners">
                <div class="ui-bar ui-bar-a">
                    <h3>{{#str}} descriptionRiddle, mod_scavengerhunt{{/str}}</h3>
                </div>
                <div class="ui-body ui-body-a">
                    <p id="nextRiddle">{{riddle.description}}</p>
                </div>
            </div>
            <p id="timeLabel"></p>
            <a href="#popupDialog" id="validarUbicacion" data-rel="popup"  data-position-to="window" data-transition="pop" class="ui-btn ui-shadow ui-corner-all ui-btn-icon-right ui-btn-inline ui-icon-carat-r">{{#str}} button_validate_location, mod_scavengerhunt{{/str}}</a>
            <p id="infoValidar">{{#str}} info_validate_location, mod_scavengerhunt{{/str}}</p>
        </div>
        <div id="infoFailedLocation">
            <h3>{{#str}} failed_location, mod_scavengerhunt{{/str}}</h3>
            <div class="ui-corner-all custom-corners">
                <div class="ui-bar ui-bar-a">
                    <h3>{{#str}} nameRiddle, mod_scavengerhunt{{/str}}</h3>
                </div>
                <div class="ui-body ui-body-a">
                    <b><p id="nameScenario2">{{name}}</p></b>
                </div>
            </div>
            <p id="timeLabelFailed"></p>
        </div>		
    </div>


    {{!Popup de aviso de envío}}

    <div data-role="popup" id="popupDialog" data-overlay-theme="b" data-theme="a" data-dismissible="false" style="max-width:400px;">
            <div role="main" class="ui-content">
                    <h3 class="ui-title">{{#str}} sendlotacion_title, mod_scavengerhunt{{/str}}</h3>
                	<p>{{#str}} sendlotacion_content, mod_scavengerhunt{{/str}}</p>
                    <a href="#" class="ui-btn ui-corner-all ui-shadow ui-btn-inline ui-btn-b" data-rel="back">{{#str}} cancel, mod_scavengerhunt{{/str}}</a>
                    <a href="#" class="ui-btn ui-corner-all ui-shadow ui-btn-inline ui-btn-b" data-rel="back" data-transition="flow" onclick="{{function}}" >{{#str}} send, mod_scavengerhunt{{/str}}</a>
                </div>
    </div>{{!Fin de Popup de aviso de envío.}}

    {{!Cabecera y barra de herramientas.}}

    <div data-role="header" class="bgimg" data-position='fixed'>
        <a href="#infopanel"  data-rel="panel" data-dismissible="true" class="ui-btn ui-btn-left ui-btn-inline ui-icon-bars ui-btn-icon-notext"></a>
        <a href="#authors"  data-prefetch="true" class="ui-btn ui-shadow ui-corner-all ui-btn-icon-right ui-btn-inline ui-icon-info ui-btn-icon-notext"></a>
        <h1><img src="pix/images/caza-tesoro-icon.png" height="24"> {{scavengerhunt.name}}</h1>
    </div>		
    <div data-role="content" id="content">		  
        <div id="map" class="smallmap"></div>
    </div>
    <div id="main_footer" data-role="footer" data-position='fixed' >
        <a href="#" class="ui-btn ui-shadow ui-corner-all ui-btn-icon-left ui-btn-inline ui-icon-geolocation ui-btn-icon-notext" onclick="{{function}}
                return false;"></a>
        <a href="#searchpage" class="ui-btn ui-shadow ui-corner-all ui-btn-icon-left ui-btn-inline ui-icon-search">{{#str}} search_button, mod_scavengerhunt{{/str}}</a>
        <a href="#layerspage" data-transition="fade" class="ui-btn ui-shadow ui-corner-all ui-btn-icon-left ui-btn-inline ui-icon-bullets">{{#str}} layers_button, mod_scavengerhunt{{/str}}</a>
        <select name="flip-2" id="flip-2" data-role="flipswitch" data-theme="b">
            <option value="off">Off</option>
            <option value="on">On</option>
        </select>
        <div id="navigation" data-role="controlgroup" data-type="vertical">
            <a href="#" data-role="button" data-icon="plus" id="plus"
               data-iconpos="notext" onclick="{{function}}
                   return false;"></a>
            <a href="#" data-role="button" data-icon="minus" id="minus"
               data-iconpos="notext" onclick="{{function}}
                   return false;"></a>
        </div>
    </div>


</div>
{{! end mappage }}

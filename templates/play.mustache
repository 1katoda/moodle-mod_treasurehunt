<div id="container" style="display:none;">
    {{! Pagina principal de la aplicacion }}
    <div data-role="page" id="mappage"  data-quicklinks="true" data-theme="b">


        {{!Panel principal de informacion}}

        <div data-role="panel" data-position="left" data-position-fixed="true" data-display="overlay" id="infopanel">

            <div id="estadoLogin">
                {{{user.picture}}} {{user.name}}
            </div>
            <h3>{{scavengerhunt.name}}</h3>
            <div id="welcomingInfo">
                <p>{{{scavengerhunt.description}}}</p>
                <a href="#" class="ui-btn  ui-btn-icon-left ui-icon-delete" onclick="return false;">{{#str}} exit, mod_scavengerhunt{{/str}}</a>
            </div>
        </div>

        {{!Panel de informacion de la pista seleccionada}}

        <div data-role="panel"  data-position="left" data-display="overlay" id="infoRiddlePanel">	
            <div id="infoRiddle">
                <h3>{{#str}} discovered_riddle, mod_scavengerhunt{{/str}}</h3>
                <div class="ui-corner-all custom-corners">
                    <div class="ui-bar ui-bar-a">
                        <h3>{{#str}} nameRiddle, mod_scavengerhunt{{/str}}</h3>
                    </div>
                    <div class="ui-body ui-body-a">
                        <b><p id="nameRiddle">{{riddle.name}}</p></b>
                    </div>
                </div>
                <div class="ui-corner-all custom-corners">
                    <div class="ui-bar ui-bar-a">
                        <h3>{{#str}} descriptionRiddle, mod_scavengerhunt{{/str}}</h3>
                    </div>
                    <div class="ui-body ui-body-a">
                        <p id="descriptionRiddle">{{riddle.description}}</p>
                    </div>
                </div>
                <p id="timeLabel"></p>
            </div>
            <div id="infoFailedLocation">
                <h3>{{#str}} failed_location, mod_scavengerhunt{{/str}}</h3>
                <div class="ui-corner-all custom-corners">
                    <div class="ui-bar ui-bar-a">
                        <h3>{{#str}} nameRiddle, mod_scavengerhunt{{/str}}</h3>
                    </div>
                    <div class="ui-body ui-body-a">
                        <b><p id="nameFailedRiddle">{{name}}</p></b>
                    </div>
                </div>
                <p id="timeLabelFailed"></p>
            </div>		
        </div>


        {{!Popup de aviso de envio}}

        <div data-role="popup" id="popupDialog" data-overlay-theme="b" data-theme="b" data-dismissible="false" style="max-width:400px;">
            <div data-role="header" data-theme="a">
                <h1>{{#str}} sendlotacion_title, mod_scavengerhunt{{/str}}</h1>
            </div>
            <div role="main" class="ui-content">
                <p>{{#str}} sendlotacion_content, mod_scavengerhunt{{/str}}</p>
                <a href="#" class="ui-btn ui-corner-all ui-shadow ui-btn-inline ui-btn-b" data-rel="back">{{#str}} cancel, mod_scavengerhunt{{/str}}</a>
                <a href="#" class="ui-btn ui-corner-all ui-shadow ui-btn-inline ui-btn-b" data-rel="back" data-transition="flow" id="sendLocation">{{#str}} send, mod_scavengerhunt{{/str}}</a>
            </div>
        </div>{{!Fin de Popup de aviso de envio.}}

        {{!Cabecera y barra de herramientas.}}

        <div data-role="header" data-position="fixed" data-fullscreen="false" >
            <a href="#infopanel"  data-rel="panel" data-dismissible="true" class="ui-btn ui-btn-left ui-btn-inline ui-icon-bars ui-btn-icon-notext"></a>
            <a href="#searchpage" class="ui-btn  ui-btn-right ui-corner-all ui-btn-icon-left ui-btn-inline ui-btn-icon-notext ui-icon-search">{{#str}} search_button, mod_scavengerhunt{{/str}}</a>
            <h1>{{#pix}} images/caza-tesoro-icon-small, scavengerhunt, Scavengerhunt Icon {{/pix}}{{scavengerhunt.name}}</h1>
        </div>		
        <div data-role="content" id="content">		  
            <div id="map"></div>
        </div>
        <div id="main_footer" data-role="footer" data-position="fixed"  data-fullscreen="false">
            <a href="#" class="ui-btn ui-shadow ui-corner-all ui-btn-icon-left ui-btn-inline ui-icon-location ui-btn-icon-notext" id="autolocate"></a>
            <a href="#popupDialog" data-rel="popup" data-position-to="window" data-transition="pop" class="ui-btn ui-shadow ui-corner-all ui-btn-icon-left ui-btn-inline ui-icon-eye" id="validateLocation">{{#str}} button_validate_location, mod_scavengerhunt{{/str}}</a>
            <a href="#layerspage" data-transition="pop" class="ui-btn ui-shadow ui-corner-all ui-btn-icon-left ui-btn-inline ui-icon-bullets">{{#str}} layers_button, mod_scavengerhunt{{/str}}</a>
            <a href="#riddlespage" data-transition="none" class="ui-btn ui-shadow ui-corner-all ui-btn-icon-left ui-btn-inline ui-icon-info">{{#str}} riddles_button, mod_scavengerhunt{{/str}}</a> 
            <div id="navigation"></div>
        </div>
    </div>
    {{! end mappage }}
    <div data-role="page" id="layerspage" data-theme="b" >
        <div data-role="header">
            <h1>Layers</h1>
        </div>
        <div data-role="content">
            <ul data-role="listview" data-inset="true" data-theme="d" data-dividertheme="c" id="layerslist">
            </ul>
            <a href="#" data-role="button" data-rel="back" data-icon="arrow-l">Back</a>
        </div>
    </div>
    {{!Fin de pagina de capas.}}
    <div data-role="page" id="searchpage" data-theme="b">
        <div data-role="header">
            <h1>{{#str}} search_button, mod_scavengerhunt{{/str}}</h1>
        </div>
        <div data-role="content">
            <form class="ui-filterable">
                <input id="autocomplete-input" data-type="search" placeholder="Find a city...">
            </form>
            <ul id="autocomplete" data-role="listview" data-inset="true" data-filter="true" data-input="#autocomplete-input"></ul>
            <div>
                <a href="#" data-role="button" data-rel="back" data-icon="arrow-l">Back</a>
            </div>
        </div>
    </div>

